@model IEnumerable<APIMVCDemo.Models.CustomerEntity>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 0 auto; width:80%">
    <div style="height:55px;"></div>
    <h2 style="color:turquoise;">Customer List using Azure Table</h2>
    <table class="table">
        <tr>
            <th>
                &nbsp;
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occupation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" class="rounded-circle" style="width:100px; height:100px;">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartitionKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RowKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </table>
</div>
