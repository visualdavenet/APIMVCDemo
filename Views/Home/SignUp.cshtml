@model APIMVCDemo.Models.Customer

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div style="margin: 0 auto; width:80%">
        <div style="height:25px;"></div>
        <h2 style="color:turquoise;">Customer Sign Up using SQL Server and Dapper</h2>
        <p>(Data Annotations added in model for Display Name, Validation, etc.)</p>


